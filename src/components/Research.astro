<style>
	.research-section {
		background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
	}

	.section-intro {
		text-align: center;
		font-size: 1.125rem;
		color: #6b7280;
		margin-bottom: 3rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	.research-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.research-card {
		background: white;
		border-radius: 1.5rem;
		padding: 2.5rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
		border-top: 4px solid;
		position: relative;
		overflow: hidden;
	}

	.research-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, transparent, currentColor, transparent);
	}

	.research-card.primary {
		border-top-color: #059669;
	}

	.research-card.secondary {
		border-top-color: #dc2626;
	}

	.research-card.tertiary {
		border-top-color: #7c3aed;
	}

	.research-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
	}

	.research-icon {
		font-size: 3rem;
		margin-bottom: 1.5rem;
	}

	.research-card h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #1e3a8a;
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.research-description {
		color: #374151;
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}

	.research-areas {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.area-tag {
		background: #f3f4f6;
		color: #374151;
		padding: 0.375rem 0.75rem;
		border-radius: 0.5rem;
		font-size: 0.875rem;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.primary .area-tag:hover {
		background: #059669;
		color: white;
	}

	.secondary .area-tag:hover {
		background: #dc2626;
		color: white;
	}

	.tertiary .area-tag:hover {
		background: #7c3aed;
		color: white;
	}

	.research-highlight {
		background: #f8fafc;
		border-radius: 0.5rem;
		padding: 1rem;
		border-left: 4px solid #1e3a8a;
		font-size: 0.875rem;
		color: #374151;
	}

	.collaboration-highlight {
